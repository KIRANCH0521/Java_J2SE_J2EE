package firstjdbc;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class ActionForm extends JFrame implements ActionListener {
	
	JLabel l1,l2,l3;
	JTextField jt1,jt2,jt3;
	JButton b1,b2,b3,b4,b5,b6;
	JPanel p1,p2;
	public static void main(String[] args) {
		new ActionForm();
	}
	ActionForm(){
		setSize(400,400);
		setLocationRelativeTo(null);
		getContentPane().setBackground(Color.CYAN);
		b1=new JButton("create");
		b2=new JButton("insert");
		b3=new JButton("delete");
		b4=new JButton("update");
		b5=new JButton("retriv");
		b6=new JButton("retrivall");
		l1=new JLabel("accno");
		l2=new JLabel("name");
		l3=new JLabel("balance");
		jt1=new JTextField(20);
		jt2=new JTextField(20);
		jt3=new JTextField(20);
		p1=new JPanel(new GridLayout(1, 6, 10, 10));
		p1.add(b1);
		p1.add(b2);
		p1.add(b3);
		p1.add(b4);
		p1.add(b5);
		p1.add(b6);
		add(p1,BorderLayout.SOUTH);
		p2=new JPanel(new GridLayout(3,2,20,20));
		p2.add(l1);
		p2.add(jt1);
		p2.add(l2);
		p2.add(jt2);
		p2.add(l3);
		p2.add(jt3);
		
		add(p2);
		setVisible(true);
		
	}
	@Override

	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}

}
